
<h3>ユーザー情報一覧</h3>

<% if flash.notice %>
  <p class = "notice"><%= flash.notice %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>メンバー</th>
      <th>更新日</th>
      <th>作成日</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.schoolname %></td>
        <td><%= user.email %></td>
        <td><%= user.diary %></td>
        <td><%= user.updated_at.to_s(:datetime_jp) %></td>
        <td><%= user.created_at.to_s(:datetime_jp)%></td>  
      </tr>
    <% end %>
   </tbody>
</table>


<p><%=link_to"ユーザー新規登録", :new_user %></p>


