<h3>ユーザー編集</h3>

<%= form_for@user do |f| %>

  <table>
    <th><%=f.label :schoolname ,"学校名"  %></th>
    <td><%=f.text_field :schoolname  %></td>
  </table>

  <table>
    <th><%=f.label :email , "メールアドレス"  %></th>
    <td><%=f.text_field :email  %></td>
  </table>

  <table>
    <th><%=f.label :student, "生徒"  %></th>
    <td><%=f.text_area :student  %></td>
  </table>

  <div>
    <ul>
      <li><%=f.submit"編集を完了する" %></li>
      <li><%=link_to"ユーザー情報一覧に戻る",:users %></li>
    </ul>
  </div>
<% end %>